<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recycler_list_our_doctors"
    android:layout_width="350dp"
    android:layout_height="100dp"
    android:layout_gravity="center_horizontal"
    android:layout_margin="15dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="20dp"
        android:orientation="horizontal">

        <!-- Profile -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_list_our_doctors"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/example_icon"
            app:civ_border_color="@color/black"
            app:civ_border_width="1dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="30dp"
            android:orientation="vertical">

            <!-- Doctor Name -->
            <TextView
                android:id="@+id/name_list_our_doctors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity=""
                android:layout_marginTop="13dp"
                android:text="Dr"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Doctor Specialise -->
            <TextView
                android:id="@+id/specialise_list_our_doctors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Specialise"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>