<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Doctor_profile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:background="@drawable/background_blue_box" />

        <!--Back Button-->
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="36dp"
            android:background="@color/blue_app"
            app:srcCompat="@drawable/back_icon" />

        <!--Profile Image-->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/doctor_profileImg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="30dp"
            android:contentDescription="@+string/app_icon"
            android:src="@drawable/profile"
            app:civ_border_color="@color/black"
            app:civ_border_width="1dp" />

        <!--Welcome Back-->
        <TextView
            android:id="@+id/welcome_back"
            android:layout_toEndOf="@+id/doctor_profileImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:text="Welcome Back,"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <!--Profile Class_Doctor Name-->
        <TextView
            android:id="@+id/doctor_profileName"
            android:layout_toEndOf="@+id/doctor_profileImg"
            android:layout_below="@+id/welcome_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:text="Doctor Name"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <!--Edit Profile Text-->
        <TextView
            android:id="@+id/doctor_editProfileImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginTop="120dp"
            android:text="Edit Profile Image"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <!--Email-->
        <TextView
            android:id="@+id/title_doctorEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/doctor_editProfileImg"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:text="Email :"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/doctor_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/doctor_editProfileImg"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_toEndOf="@id/title_doctorEmail"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <!--Phone Number-->
        <TextView
            android:id="@+id/title_doctorPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_doctorEmail"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:text="Phone Number :"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/doctor_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_doctorEmail"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_toEndOf="@id/title_doctorPhone"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <!--Medical License-->
        <TextView
            android:id="@+id/title_doctorMedical_license"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_doctorPhone"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:text="Medical License :"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/doctor_medical_license"
            android:layout_width="160dp"
            android:layout_height="35dp"
            android:layout_below="@id/title_doctorPhone"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_toEndOf="@id/title_doctorMedical_license"
            android:autoLink="web"
            android:linksClickable="false"
            android:scrollbars="vertical"
            android:textColor="@color/black"
            android:textColorLink="@color/dark_blue"
            android:textSize="18sp" />

        <!--Relevant Certificates-->
        <TextView
            android:id="@+id/title_doctorRelevant_certs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_doctorMedical_license"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:text="Relevant Certificates :"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/doctor_relevant_certs"
            android:layout_width="160dp"
            android:layout_height="35dp"
            android:layout_below="@id/title_doctorMedical_license"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_toEndOf="@id/title_doctorRelevant_certs"
            android:autoLink="web"
            android:linksClickable="false"
            android:scrollbars="vertical"
            android:textColor="@color/black"
            android:textColorLink="@color/dark_blue"
            android:textSize="18sp" />

        <!--Specialise-->
        <TextView
            android:id="@+id/title_specialise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/doctor_relevant_certs"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:text="Specialise :"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/doctor_specialise"
            android:layout_width="160dp"
            android:layout_height="35dp"
            android:layout_below="@id/doctor_relevant_certs"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@id/title_specialise"
            android:autoLink="web"
            android:linksClickable="false"
            android:scrollbars="vertical"
            android:textColor="@color/black"
            android:textColorLink="@color/dark_blue"
            android:textSize="18sp" />

        <!--Bio-->
        <TextView
            android:id="@+id/title_bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_specialise"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:text="Bio :"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/doctor_bio"
            android:layout_width="330dp"
            android:layout_height="150dp"
            android:layout_below="@+id/title_bio"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/symptoms_box_input"
            android:gravity="start|top"
            android:hint="Enter your bio.."
            android:padding="18dp"
            android:textSize="15sp" />


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_below="@id/doctor_bio"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <!--Sign Out Button-->
            <Button
                android:id="@+id/btn_doctor_update"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:textAllCaps="false"
                android:backgroundTint="@color/blue"
                android:text="@string/btn_update" />

            <!--Save Button-->
            <Button
                android:id="@+id/btn_doctor_signOut"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:backgroundTint="#1C7FCC"
                android:textAllCaps="false"
                android:text="@string/btn_sign_out" />

        </LinearLayout>
    </RelativeLayout>
</ScrollView>